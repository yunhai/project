root = true

[*]
indent_style = space
charset = utf-8
trim_trailling_whitespace = true
end_of_line = true
insert_final_newline = true

[*.php]
indent_size = 4

[*.twig]
indent_size = 4

[*.css]
indent_size = 4

[*.scss]
indent_size = 4

[*.js]
indent_size = 4

[package.json]
indent_size = 2

[composer.json]
indent_size = 4

[*.yml]
indent_size = 4
